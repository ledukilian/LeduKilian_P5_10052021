{% set assets_directory = '' %}

{% extends "client/base.html.twig" %}

{% block title %}
   Inscription -
   {{parent()}}
{% endblock %}

{% block main %}
   <div class="container mt-6 p-5">
      <div class="card col-12 col-md-6 offset-md-3">
         <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Inscription</h4>
            <hr>
            <form method="POST">
               <div class="form-group">
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fas fa-at"></i>
                        </span>
                     </div>
                     <label for="email" class="d-none">Adresse e-mail</label>
                     <input name="email" id="email" class="form-control" placeholder="Adresse e-mail" type="email" required="required" />
                  </div>
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fas fa-font"></i>
                        </span>
                     </div>
                     <label for="lastname" class="d-none">Nom</label>
                     <input name="lastname" id="lastname" minlenght="6" maxlenght="48" class="form-control" placeholder="Nom" type="text" required="required" />
                  </div>
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fas fa-font"></i>
                        </span>
                     </div>
                     <label for="firstname" class="d-none">Prénom</label>
                     <input name="firstname" id="firstname" minlenght="6" maxlenght="48" class="form-control" placeholder="Prénom" type="text" required="required" />
                  </div>
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fa fa-user"></i>
                        </span>
                     </div>
                     <label for="username" class="d-none">Nom d'utilisateur</label>
                     <input name="username" id="username" minlenght="6" maxlenght="48" class="form-control" placeholder="Nom d'utilisateur" type="text" required="required" />
                  </div>
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fa fa-lock"></i>
                        </span>
                     </div>
                     <label for="password" class="d-none">Mot de passe</label>
                     <input name="password" id="password" minlenght="6" maxlenght="256" class="form-control" placeholder="Mot de passe" type="password" required="required" />
                  </div>
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fa fa-lock"></i>
                        </span>
                     </div>
                     <label for="password-confirm" class="d-none">Confirmation mot de passe</label>
                     <input name="password-confirm" id="password-confirm" minlenght="6" maxlenght="256" class="form-control" placeholder="Confirmation mot de passe" type="password" required="required" />
                  </div>
               </div>
               <div class="form-group">
                  <button type="submit" class="btn btn-warning btn-block">
                     S'inscrire
                  </button>
               </div>
            </form>
         </article>
      </div>
   </div>
{% endblock %}