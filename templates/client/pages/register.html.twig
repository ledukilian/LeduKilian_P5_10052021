{% set assets_directory = '' %}

{% extends "client/base.html.twig" %}

{% block title %}
   Inscription -
   {{parent()}}
{% endblock %}

{% block main %}
   <div class="container mt-6 p-5">
      <div class="card col-12 col-md-6 offset-md-3">
         <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Inscription</h4>
            <hr>
            <form method="POST">
               <div class="form-group">
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fas fa-at"></i>
                        </span>
                     </div>
                     <input name="email" class="form-control" placeholder="Adresse e-mail" type="email">
                  </div>
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fas fa-font"></i>
                        </span>
                     </div>
                     <input name="lastname" class="form-control" placeholder="Nom" type="text">
                  </div>
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fas fa-font"></i>
                        </span>
                     </div>
                     <input name="firstname" class="form-control" placeholder="PrÃ©nom" type="text">
                  </div>
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fa fa-user"></i>
                        </span>
                     </div>
                     <input name="username" class="form-control" placeholder="Nom d'utilisateur" type="text">
                  </div>
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fa fa-lock"></i>
                        </span>
                     </div>
                     <input name="password" class="form-control" placeholder="Mot de passe" type="password">
                  </div>
                  <div class="input-group pb-2">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fa fa-lock"></i>
                        </span>
                     </div>
                     <input name="password-confirm" class="form-control" placeholder="Confirmation mot de passe" type="password">
                  </div>
               </div>
               <div class="form-group">
                  <button type="submit" class="btn btn-warning btn-block">
                     S'inscrire
                  </button>
               </div>
            </form>
         </article>
      </div>
   </div>
{% endblock %}