{% set assets_directory = '' %}

{% extends "client/base.html.twig" %}

{% block title %}
   Connexion -
   {{parent()}}
{% endblock %}

{% if values is not defined %}
   {% set values = {
      'email': ''
   } %}
{% endif %}

{% block main %}
   <div class="container mt-7 mb-7 p-5">
      <div class="card col-12 col-md-6 offset-md-3 bg-light">
         <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1"><i class="fas fa-lock font-weight-bold text-warning mr-2"></i>Connexion</h4>
            <hr>
            <form method="POST">
               <div class="form-group">
                  <div class="input-group">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fas fa-at"></i>
                        </span>
                     </div>
                     <label for="email" class="d-none">Adresse e-mail</label>
                     <input name="email" id="email" minlenght="2" maxlenght="256" class="form-control" value="{{ _post.email }}" placeholder="Adresse e-mail" type="email" required="required" />
                  </div>
                  {% if messages.email is defined %}
                     {% include "client/parts/_message.html.twig" with {'message': messages.email.message} %}
                  {% endif %}
               </div>
               <div class="form-group">
                  <div class="input-group">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fa fa-lock"></i>
                        </span>
                     </div>
                     <label for="password" class="d-none">Mot de passe</label>
                     <input name="password" id="password" minlenght="2" maxlenght="256" class="form-control" placeholder="Mot de passe" type="password" required="required" />
                  </div>
                  {% if messages.password is defined %}
                     {% include "client/parts/_message.html.twig" with {'message': messages.password.message} %}
                  {% endif %}
               </div>
               <div class="form-group">
                  <button type="submit" class="btn btn-warning btn-block">
                     Se connecter
                  </button>
               </div>
            </form>
         </article>
      </div>
   </div>
{% endblock %}