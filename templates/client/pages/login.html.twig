{% set assets_directory = '' %}

{% extends "client/base.html.twig" %}

{% block title %}
   Connexion -
   {{parent()}}
{% endblock %}

{% block main %}
   <div class="container mt-6 p-5">
      <div class="card col-12 col-md-6 offset-md-3">
         <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Connexion</h4>
            <hr>
            <form method="POST">
               <div class="form-group">
                  <div class="input-group">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fas fa-at"></i>
                        </span>
                     </div>
                     <label for="email" class="d-none">Adresse e-mail</label>
                     <input name="email" id="email" minlenght="6" maxlenght="256" class="form-control" placeholder="Adresse e-mail" type="email" required="required" />
                  </div>
               </div>
               <div class="form-group">
                  <div class="input-group">
                     <div class="input-group-prepend">
                        <span class="input-group-text">
                           <i class="fa fa-lock"></i>
                        </span>
                     </div>
                     <label for="password" class="d-none">Mot de passe</label>
                     <input name="password" id="password" minlenght="6" maxlenght="256" class="form-control" placeholder="Mot de passe" type="password" required="required" />
                  </div>
               </div>
               <div class="form-group">
                  <button type="submit" class="btn btn-warning btn-block">
                     Se connecter
                  </button>
               </div>
               <p class="text-center">
                  <a href="#" class="btn">Mot de passe oubli√© ?</a>
               </p>
            </form>
         </article>
      </div>
   </div>
{% endblock %}