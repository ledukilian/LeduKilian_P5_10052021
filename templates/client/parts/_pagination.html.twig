<div class="btn-toolbar mt-3" role="toolbar" aria-label="Toolbar with button groups">
      {% for i in 1 .. pagination.page_count %}
         {% if i == pagination.current %}
             <button type="button" class="btn btn-dark mx-1 active">{{ i }}</button>
         {% else %}
         <a href="/blog/{{ i }}/">
             <button type="button" class="btn btn-dark mx-1">{{ i }}</button>
          </a>
         {% endif %}
      {% endfor %}
</div>