{% if form_type == 'add' %}
   {% set form_title = 'Ajouter un nouvel article' %}
   {% set article_title = '' %}
   {% set button_label = 'Poster' %}
{% elseif form_type == 'edit' %}
   {% set form_title = 'Modifier un article' %}
   {% set article_title = post.title %}
   {% set article_lead = post.lead %}
   {% set image_alt = post.coverAltImg %}
   {% set article_content = post.content %}
   {% set button_label = 'Modifier' %}
{% endif %}


<div class="container-fluid">
   <div class="row">
      <div class="d-sm-flex align-items-center justify-content-between mb-4">
         <h1 class="h3 mb-0 text-gray-800 mx-2">
            <i class="fas fa-plus-circle mr-2"></i>{{ form_title }}</h1>
      </div>
      <form class="d-flex flex-column col-lg-12 mb-4" action="#">
         <div class="form-group">
            <label for="titreArticle">Titre</label>
            <input type="text" class="form-control" id="titreArticle" placeholder="Titre de l'article" value="{{ article_title }}">
         </div>
         <div class="form-group">
            <label for="titreArticle">Lead Phrase</label>
            <input type="text" class="form-control" id="leadPhraseArticle" placeholder="Phrase d'entÃªte" value="{{ article_lead }}">
         </div>
         <div class="form-group d-flex flex-row flex-wrap">
            <label class="col-12 px-0" for="imageArticle">Image</label>
            <input class="col-12 col-md-5" type="file" id="imageArticle" name="imageArticle">
            <input type="text" class="form-control col-12 col-md-6" id="textimage" placeholder="Texte alternatif de l'image" value="{{ image_alt }}">
         </div>
         <div class="form-group">
            <label for="titreArticle">Contenu</label>
            <form method="post">
            <textarea class="form-control" id="contenuArticle" rows="12" placeholder="Contenu de l'article">{{ article_content }}</textarea>
          </form>
         </div>
         <div class="form-group col-12 d-flex justify-content-end">
            <button class="btn btn-primary mx-2">
               <i class="fas fa-save mr-2"></i>
               Enregistrer</button>
            <button class="btn btn-success mx-2">
               <i class="fas fa-paper-plane mr-2"></i>
               {{ button_label }} l'article</button>
         </div>
      </form>
   </div>
</div>